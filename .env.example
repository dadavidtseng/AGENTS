# ============================================================================
# KADI System - Production Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# This file is used by docker-compose.production.yml
# ============================================================================

# ----------------------------------------------------------------------------
# Anthropic API Configuration (Required)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-actual-key-here

# ----------------------------------------------------------------------------
# KADI Broker Configuration
# ----------------------------------------------------------------------------
# JWT Secret for authentication (REQUIRED in production)
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# These are set in docker-compose.yml, override if needed
# AMQP_URL=amqp://rabbit:5672
# WS_PORT=8080

# ----------------------------------------------------------------------------
# Agent_TypeScript Configuration
# ----------------------------------------------------------------------------
# Broker connection (set in docker-compose.yml)
# KADI_BROKER_URL=ws://kadi-broker:8080/kadi

# Bot feature flags
ENABLE_SLACK_BOT=true
ENABLE_DISCORD_BOT=true

# Polling interval in milliseconds
BOT_POLL_INTERVAL_MS=5000

# ----------------------------------------------------------------------------
# Slack Configuration
# ----------------------------------------------------------------------------
# These tokens are currently in mcp-upstreams.production.json
# If you want to move them here, uncomment and fill:
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_APP_TOKEN=xapp-your-app-token

# ----------------------------------------------------------------------------
# Discord Configuration
# ----------------------------------------------------------------------------
# These tokens are currently in mcp-upstreams.production.json
# If you want to move them here, uncomment and fill:
# DISCORD_TOKEN=your-discord-bot-token
# DISCORD_GUILD_ID=your-guild-id

# ----------------------------------------------------------------------------
# MCP Configuration
# ----------------------------------------------------------------------------
MCP_LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Node.js Configuration
# ----------------------------------------------------------------------------
NODE_ENV=production
