# ============================================================================
# Template Agent TypeScript - Test Environment Variables
# ============================================================================
# Copy this file to .env.test and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Agent Configuration
# ----------------------------------------------------------------------------
AGENT_NAME=template-typescript-agent-test
AGENT_VERSION=0.0.1

# ----------------------------------------------------------------------------
# Anthropic API Configuration (Required)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ----------------------------------------------------------------------------
# Model Manager Configuration (Required for multi-LLM support)
# ----------------------------------------------------------------------------
MODEL_MANAGER_BASE_URL=https://your-model-manager-url.com
MODEL_MANAGER_API_KEY=your-model-manager-api-key-here

# ----------------------------------------------------------------------------
# ArcadeDB Configuration
# ----------------------------------------------------------------------------
ARCADEDB_URL=http://arcadedb:2480
ARCADEDB_ROOT_PASSWORD=arcadedb

# ----------------------------------------------------------------------------
# Memory Configuration
# ----------------------------------------------------------------------------
MEMORY_DATA_PATH=/app/data/memory

# ----------------------------------------------------------------------------
# Bot Configuration
# ----------------------------------------------------------------------------
ENABLE_SLACK_BOT=true
ENABLE_DISCORD_BOT=true

# Slack Bot Configuration
SLACK_BOT_USER_ID=your-slack-bot-user-id-here

# Discord Bot Configuration
DISCORD_BOT_USER_ID=your-discord-bot-user-id-here

# ----------------------------------------------------------------------------
# Claude Model Configuration
# ----------------------------------------------------------------------------
BOT_CLAUDE_MODEL=claude-3-haiku-20240307
BOT_CLAUDE_MAX_TOKENS=4096

# ----------------------------------------------------------------------------
# Bot Timing & Resilience Configuration
# ----------------------------------------------------------------------------
BOT_TOOL_TIMEOUT_MS=10000
BOT_MAX_RETRIES=3
BOT_RETRY_BASE_DELAY_MS=1000
BOT_CIRCUIT_BREAKER_MAX_FAILURES=5
BOT_CIRCUIT_BREAKER_RESET_MS=60000

# ----------------------------------------------------------------------------
# Node.js Configuration
# ----------------------------------------------------------------------------
NODE_ENV=production
NODE_TLS_REJECT_UNAUTHORIZED=0

# ----------------------------------------------------------------------------
# MCP Server Configuration
# ----------------------------------------------------------------------------
MCP_LOG_LEVEL=info
MCP_TRANSPORT_TYPE=stdio
MCP_RESPONSE_FORMAT=auto

# ----------------------------------------------------------------------------
# Git Configuration (for MCP git operations)
# ----------------------------------------------------------------------------
GIT_BASE_DIR=/app
GIT_USERNAME='Your Name'
GIT_EMAIL=your-email@example.com

# ----------------------------------------------------------------------------
# KADI Network Configuration (if using KADI broker)
# ----------------------------------------------------------------------------
# KADI_BROKER_URL=ws://your-broker-url:8080/kadi
# KADI_NETWORK=global,text,git,slack,discord
